<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart | Amazon</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="../css/styles.css" />
    <link rel="stylesheet" href="../css/cart.css" />
  </head>
  <body>
    <%- navbar %>
    <!-- cart -->
    <div class="Cart-Container">
      <div class="Header">
        <h3 class="Heading">Shopping Cart</h3>
        <h5 class="Action">Remove all</h5>
      </div>
      <!-- cart items -->
      <% let totalAmount = 0; %> <% user.cart.forEach(function(item, index) { %>
      <div class="Cart-Items">
        <div class="image-box">
          <img src="<%= images[item.productName] %>" style="height: 120px" />
        </div>
        <div class="about">
          <h1 class="title"><%= item.productName %></h1>
        </div>
        <div class="counter">
          <div class="btn increment">+</div>
          <div class="count"><%= item.quantity %></div>
          <div class="btn decrement">-</div>
        </div>
        <div class="prices">
          <div class="amount">$<%= item.amount %></div>
          <div class="remove">Remove</div>
        </div>
      </div>
      <% totalAmount += item.amount; %> <% }); %>
      <!-- cart items ends -->
    </div>
    <!-- cart -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const removeButtons = document.querySelectorAll(".remove");
        const apiUrl = "/api/cart/update";

        function handleRemove(event) {
          const cartItem = event.target.closest(".Cart-Items");
          cartItem.remove();
          sendRequestToBackend(apiUrl, {
            productName: getProductTitle(cartItem),
            quantity: 0,
            action: "remove",
          });
        }

        function getProductTitle(cartItem) {
          return cartItem.querySelector(".title").textContent.trim();
        }

        function sendRequestToBackend(url, data) {
          fetch(url, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
          })
            .then((response) => {
              if (response.ok) {
                // Redirect to /cart if cart is not empty, otherwise redirect to /
                const redirectTo =
                  (window.location.pathname === "/" && "/cart") || "/";
                window.location.href = redirectTo;
              } else {
                throw new Error("Network response was not ok.");
              }
            })
            .catch((error) => console.error("Error:", error));
        }

        removeButtons.forEach((button) => {
          button.addEventListener("click", handleRemove);
        });
      });
    </script>
  </body>
</html>
